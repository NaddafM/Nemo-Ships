            </JFXTextField>
            <HBox>
               <children>
                  <JFXTextField fx:id="personFirstName" labelFloat="true" prefHeight="25.0" prefWidth="123.0" promptText="First Name">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="personSurName" labelFloat="true" prefHeight="25.0" prefWidth="123.0" promptText="Sur Name" />
